{
    "predicates": [
        {
            "and": [
                {
                    "equals": {
                        "method": "POST"
                    }
                },
                {
                    "matches": {
                        "path": "^/token/charge",
                        "query": {
                            "customerType": "AdUser",
                            "token": "declined_card_token",
                            "prn": "\\d+",
                            "amount": "\\d+",
                            "country": "(Australia|NewZealand)",
                            "email": "thisis@anemail.net",
                            "reference": ""
                        }
                    }
                }
            ]
        }
    ],
    "responses": [
        {
            "is": {
                "statusCode": 400,
                "headers": {
                    "Content-Type": "text/plain; charset=utf-8"
                },
                "body": "Your card was declined."
            }
        }
    ]
}
