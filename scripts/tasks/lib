function exitError {
    echo "Error: $1" >&2
    exit 1
}

function compressAndPushAsset {

  echo ">> Compressing static asset $1 > $1.gz"
  gzip -c9 $1 > $1.gz

  echo ">> Pushing $1.gz to $2"
  aws s3 cp \
    --region $AWSRegion \
    --cache-control max-age=$ASSET_MAX_AGE_SECONDS \
    --content-encoding gzip \
    $1.gz $2
}
